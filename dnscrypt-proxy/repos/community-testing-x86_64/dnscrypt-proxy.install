post_install() {
    useradd -r -N -d /var/empty -s /sbin/nologin dnscrypt
}

post_remove() {
    userdel dnscrypt
}

post_upgrade() {
    echo -e "\033[1m==>\033[0m dnscrypt-proxy v2+ are rewritten in Golang by upstream. Previous"
    echo -e "\033[1m==>\033[0m configuration WILL break. Please update your configurations."
}
